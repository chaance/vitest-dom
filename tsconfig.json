{
  "include": ["**/*"],
  "exclude": [
    "dist",
    "node_modules",
    "./matchers.d.ts",
    "./extend-expect.d.ts"
  ],
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "module": "ESNext",
    "target": "ES2020"
  }
}
